: << EOM # Batch start
@echo off
set SCRIPT=%~f0
set EXEOUT=%TEMP%\cosmotop.exe

REM Check if extraction is needed
powershell -command ^
  "$script = Get-Item -Path '%SCRIPT%';" ^
  "if (Test-Path '%EXEOUT%') {" ^
    "$exe = Get-Item -Path '%EXEOUT%';" ^
    "if ($exe.LastWriteTime -gt $script.LastWriteTime) { exit 0 }" ^
    "else { exit 1 }" ^
  "} else { exit 1 }"
if %ERRORLEVEL%==0 (
    REM No extraction needed
    "%EXEOUT%" %*
    goto :EOF
)

if exist "%EXEOUT%" del "%EXEOUT%"

REM Extracting base64 data after marker and decoding...
powershell -command ^
  "$script = Get-Content -Raw -Encoding UTF8 '%SCRIPT%';" ^
  "$offset = {OFFSET_MAIN};" ^
  "$b64 = $script.Substring($offset);" ^
  "[IO.File]::WriteAllBytes('%EXEOUT%', [Convert]::FromBase64String($b64))"

if exist "%EXEOUT%" (
    REM Extraction and decode complete.
    "%EXEOUT%" %*
    goto :EOF
)

echo ERROR: Extraction failed!
goto :EOF
EOM

SCRIPT="$0"
TMPDIR="${TMPDIR:-/tmp}"
EXEOUT="$TMPDIR/cosmotop.exe"
INTERP="$TMPDIR/.blink"

OFFSET1={OFFSET_INTERP}   # Start of first blob (interpreter)
LEN1={LEN_INTERP}       # Length of first blob (adjust as needed)
OFFSET2={OFFSET_MAIN}   # Start of second blob (main binary)

decode_b64() {
    if command -v base64 >/dev/null 2>&1; then
        base64 -d
    elif command -v python3 >/dev/null 2>&1; then
        python3 -c 'import sys,base64;base64.decode(sys.stdin.buffer, sys.stdout.buffer)'
    else
        echo "ERROR: Neither base64 nor python3 is available for decoding base64." >&2
        exit 1
    fi
}

# Check if extraction is needed
if [ -e "$EXEOUT" ] && [ "$EXEOUT" -nt "$SCRIPT" ]; then
    if [ "$(uname -s)" = "OpenBSD" ]; then
        if [ ! -e "$INTERP" ] || [ "$INTERP" -ot "$SCRIPT" ]; then
            rm -f "$INTERP"
            tail -c +$((OFFSET1+1)) "$SCRIPT" | head -n "$LEN1" | decode_b64 > "$INTERP"
            chmod +x "$INTERP"
        fi
        "$INTERP" "$EXEOUT" "$@"
        exit $?
    else
        "$EXEOUT"
        exit $?
    fi
fi

rm -f "$EXEOUT"

# Extract main binary (cosmotop.exe)
tail -c +$((OFFSET2+1)) "$SCRIPT" | decode_b64 > "$EXEOUT"

if [ ! -e "$EXEOUT" ]; then
    echo "ERROR: Extraction failed!"
    exit 1
fi

chmod +x "$EXEOUT"

if [ "$(uname -s)" = "OpenBSD" ]; then
    if [ ! -e "$INTERP" ] || [ "$INTERP" -ot "$SCRIPT" ]; then
        rm -f "$INTERP"
        tail -c +$((OFFSET1+1)) "$SCRIPT" | head -n "$LEN1" | decode_b64 > "$INTERP"
        chmod +x "$INTERP"
    fi
    "$INTERP" "$EXEOUT" "$@"
else
    "$EXEOUT" "$@"
fi

exit
